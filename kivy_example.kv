BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_conversion
            text: '  '
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.apply_increment(10)
            Button:
                text: 'Down'
                on_press: app.apply_increment(-10)
    Button:
#    M to KM isn't descriptive enough.
        text: 'Convert Metres to Kilometres'
        on_press: app.calculate_conversion()
    Label:
        text: 'Enter the amount'
        color: (1, 1, 0, 1)
        id: output_label
